@prefix : <http://example.org/diary#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Ontologia di Alex's Diary
:DiaryOntology rdf:type owl:Ontology ;
    rdfs:comment "Un'ontologia per rappresentare la conoscenza di un diario personale." ;
    rdfs:label "Diary Ontology" .

# Classi principali
:Persona rdf:type owl:Class ;
    rdfs:label "Persona" ;
    rdfs:comment "Rappresenta una persona." .

:Animale rdf:type owl:Class ;
    rdfs:label "Animale" ;
    rdfs:comment "Rappresenta un animale domestico o selvatico." .

:Luogo rdf:type owl:Class ;
    rdfs:label "Luogo" ;
    rdfs:comment "Rappresenta un luogo geografico o fisico." .

:Attività rdf:type owl:Class ;
    rdfs:label "Attività" ;
    rdfs:comment "Rappresenta un'attività svolta da una persona o un gruppo." .

:Oggetto rdf:type owl:Class ;
    rdfs:label "Oggetto" ;
    rdfs:comment "Rappresenta un oggetto fisico o simbolico." .

# Sottoclassi di Attività
:Lavoro rdf:type owl:Class ;
    rdfs:label "Lavoro" ;
    rdfs:comment "Rappresenta un lavoro svolto da una persona." ;
    rdfs:subClassOf :Attività .

:Hobby rdf:type owl:Class ;
    rdfs:label "Hobby" ;
    rdfs:comment "Rappresenta un hobby o un'attività svolta nel tempo libero." ;
    rdfs:subClassOf :Attività .

# Relazioni
:haAmico rdf:type owl:ObjectProperty ;
    rdfs:label "ha amico" ;
    rdfs:comment "Relazione tra una persona e un amico." ;
    rdfs:domain :Persona ;
    rdfs:range :Persona .

:viveIn rdf:type owl:ObjectProperty ;
    rdfs:label "vive in" ;
    rdfs:comment "Relazione tra una persona e un luogo." ;
    rdfs:domain :Persona ;
    rdfs:range :Luogo .

:haPassione rdf:type owl:ObjectProperty ;
    rdfs:label "ha passione" ;
    rdfs:comment "Relazione tra una persona e una passione generica." ;
    rdfs:domain :Persona ;
    rdfs:range :Attività .

:haLavoro rdf:type owl:ObjectProperty ;
    rdfs:label "ha lavoro" ;
    rdfs:comment "Relazione tra una persona e un lavoro specifico." ;
    rdfs:domain :Persona ;
    rdfs:range :Lavoro .

:haHobby rdf:type owl:ObjectProperty ;
    rdfs:label "ha hobby" ;
    rdfs:comment "Relazione tra una persona e un hobby specifico." ;
    rdfs:domain :Persona ;
    rdfs:range :Hobby .

:possiede rdf:type owl:ObjectProperty ;
    rdfs:label "possiede" ;
    rdfs:comment "Relazione tra una persona e un animale o un oggetto." ;
    rdfs:domain :Persona ;
    rdfs:range :Animale .

:partecipaA rdf:type owl:ObjectProperty ;
    rdfs:label "partecipa a" ;
    rdfs:comment "Relazione tra una persona e un'attività." ;
    rdfs:domain :Persona ;
    rdfs:range :Attività .

# Attributi
:età rdf:type owl:DatatypeProperty ;
    rdfs:label "età" ;
    rdfs:comment "L'età di una persona." ;
    rdfs:domain :Persona ;
    rdfs:range xsd:integer .

:nome rdf:type owl:DatatypeProperty ;
    rdfs:label "nome" ;
    rdfs:comment "Il nome di una persona o un animale." ;
    rdfs:domain :Attività ;
    rdfs:range xsd:string .

:nome rdf:type owl:DatatypeProperty ;
    rdfs:label "nome" ;
    rdfs:comment "Il nome di una persona";
    rdfs:domain :Animale ;
    rdfs:range xsd:string .

:descrizione rdf:type owl:DatatypeProperty ;
    rdfs:label "descrizione" ;
    rdfs:comment "Una descrizione testuale di un'entità." ;
    rdfs:domain :Attività ;
    rdfs:range xsd:string .

:descrizione rdf:type owl:DatatypeProperty ;
    rdfs:label "descrizione" ;
    rdfs:comment "Una descrizione testuale di un'entità." ;
    rdfs:domain :Luogo ;
    rdfs:range xsd:string .



