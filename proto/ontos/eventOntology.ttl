@prefix : <http://example.org/event-ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Ontology Metadata
:EventOntology rdf:type owl:Ontology ;
    rdfs:label "Event and Activity Ontology" ;
    rdfs:comment "An ontology to describe events, activities, locations, times, participants, animals, objects, and related properties." .

# Core Classes
:Event rdf:type owl:Class ;
    rdfs:label "Event" ;
    rdfs:comment "A specific occurrence that happens at a given time and place." .

:Activity rdf:type owl:Class ;
    rdfs:label "Activity" ;
    rdfs:comment "A task or action performed as part of an event or independently." .

:PlannedActivity rdf:type owl:Class ;
    rdfs:label "Planned Activity" ;
    rdfs:comment "An activity that is scheduled to take place in the future." ;
    rdfs:subClassOf :Activity .

:Location rdf:type owl:Class ;
    rdfs:label "Location" ;
    rdfs:comment "A physical or virtual place where an event or activity takes place." .

:Time rdf:type owl:Class ;
    rdfs:label "Time" ;
    rdfs:comment "A specific time reference associated with an event or activity." .

:Person rdf:type owl:Class ;
    rdfs:label "Person" ;
    rdfs:comment "An individual who participates in events or activities." .

:Animal rdf:type owl:Class ;
    rdfs:label "Animal" ;
    rdfs:comment "A non-human living being that may be involved in an event or activity." .

:Object rdf:type owl:Class ;
    rdfs:label "Object" ;
    rdfs:comment "A tangible or intangible thing that may be used in an event or activity." .

# Properties
## Object Properties
:occursAt rdf:type owl:ObjectProperty ;
    rdfs:label "occurs at" ;
    rdfs:comment "Links an event or activity to a location." ;
    rdfs:domain :Event ;
    rdfs:range :Location .

:hasStartTime rdf:type owl:ObjectProperty ;
    rdfs:label "has start time" ;
    rdfs:comment "Indicates the start time of an event or activity." ;
    rdfs:domain :Event ;
    rdfs:range :Time .

:hasEndTime rdf:type owl:ObjectProperty ;
    rdfs:label "has end time" ;
    rdfs:comment "Indicates the end time of an event or activity." ;
    rdfs:domain :Event ;
    rdfs:range :Time .

:hasParticipant rdf:type owl:ObjectProperty ;
    rdfs:label "has participant" ;
    rdfs:comment "Indicates a person participating in an event or activity." ;
    rdfs:domain :Event ;
    rdfs:range :Person .

:involvesAnimal rdf:type owl:ObjectProperty ;
    rdfs:label "involves animal" ;
    rdfs:comment "Links an event or activity to an animal involved in it." ;
    rdfs:domain :Event ;
    rdfs:range :Animal .

:usesObject rdf:type owl:ObjectProperty ;
    rdfs:label "uses object" ;
    rdfs:comment "Indicates an object used in an event or activity." ;
    rdfs:domain :Event ;
    rdfs:range :Object .

## Data Properties
:hasName rdf:type owl:DatatypeProperty ;
    rdfs:label "has name" ;
    rdfs:comment "The name of an entity." ;
    rdfs:domain :Person ;
    rdfs:range xsd:string .

:hasDescription rdf:type owl:DatatypeProperty ;
    rdfs:label "has description" ;
    rdfs:comment "A textual description of an entity." ;
    rdfs:domain :Event ;
    rdfs:range xsd:string .

:hasDate rdf:type owl:DatatypeProperty ;
    rdfs:label "has date" ;
    rdfs:comment "The date when an event or activity occurs." ;
    rdfs:domain :Time ;
    rdfs:range xsd:date .

:hasTime rdf:type owl:DatatypeProperty ;
    rdfs:label "has time" ;
    rdfs:comment "The specific time of an event or activity." ;
    rdfs:domain :Time ;
    rdfs:range xsd:time .

:hasAge rdf:type owl:DatatypeProperty ;
    rdfs:label "has age" ;
    rdfs:comment "The age of a person or animal." ;
    rdfs:domain :Person;
    rdfs:range xsd:integer .

# Relationships
:isSubEventOf rdf:type owl:ObjectProperty ;
    rdfs:label "is sub-event of" ;
    rdfs:comment "Indicates that an event is part of another event." ;
    rdfs:domain :Event ;
    rdfs:range :Event .

:isPlannedFor rdf:type owl:ObjectProperty ;
    rdfs:label "is planned for" ;
    rdfs:comment "Links a planned activity to a future time." ;
    rdfs:domain :PlannedActivity ;
    rdfs:range :Time .
